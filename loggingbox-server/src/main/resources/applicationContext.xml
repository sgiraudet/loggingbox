<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:property-placeholder location="classpath:loggingbox.properties" />



    <bean id="logAccessor"
          class="${com.loggingbox.storage.log}"/>
    <bean id="applicationAccessor"
          class="${com.loggingbox.storage.application}"/>
          
          
	<import resource="classpath:persistence.xml" />

	<context:component-scan base-package="com.log" />
    <context:component-scan base-package="com.loggingbox" />
    
    
    <bean id="properties"
          class="com.loggingbox.service.ServerProperties"/>
          
</beans>